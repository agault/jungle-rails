<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

    </div>
    <h4 class="new-review-head">Review this product</h4>
      <%= form_for [@product, Review.new] do |f| %>


            <div class="form-group rating-dropdown">
              <%= f.label :rating %>
              <%= select(:review, :rating, [5, 4, 3, 2, 1])%>
            </div>

            <div class="form-group">

              <%= f.text_area :description, class: "form-control"%>
            </div>

            <%= f.submit 'Submit Review', class: 'btn btn-primary' %>

      <% end %>

 <h4> Comments</h4>
  <div>
    <% @product.reviews.each do |r| %>
      <div class="media">
        <div class="media-body">
          <h5 class="mt-0"><%= r.user.first_name %></h5>
              <div><%= r.description %></div>
              <div><%= r.rating %></div>
        </div>
      </div>
    <% end %>
   </div>

  </article>

</section>
